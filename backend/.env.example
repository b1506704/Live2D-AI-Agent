# Server Configuration
HOST=0.0.0.0
PORT=8000
API_VERSION=v1

# CUDA Configuration
USE_CUDA=true
CUDA_DEVICE=cuda:0

# Model Paths
MODELS_DIR=models
LIVE2D_MODELS_DIR=models/live2d
AI_MODELS_DIR=models/ai

# LLM Configuration
LLM_MODEL_NAME=llama-2-7b-chat.gguf
LLM_MODEL_PATH=models/ai/llama-2-7b-chat.gguf
LLM_CONTEXT_LENGTH=4096
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.95
LLM_THREADS=8
LLM_GPU_LAYERS=35

# Whisper Configuration
WHISPER_MODEL_SIZE=base

# TTS Configuration
TTS_MODEL_NAME=tts_models/en/ljspeech/tacotron2-DDC
TTS_VOCODER_NAME=vocoder_models/en/ljspeech/hifigan_v2
TTS_JAPANESE_MODEL=tts_models/ja/kokoro/tacotron2-DDC

# Language Configuration
DEFAULT_LANGUAGE=en

# Live2D Configuration
DEFAULT_LIVE2D_MODEL=Haru
LIVE2D_MOTION_SYNC=true

# Agent Configuration
AGENT_NAME=AI Assistant
AGENT_PERSONALITY=helpful, friendly, and knowledgeable
ENABLE_TOOL_USE=true
MAX_AGENT_ITERATIONS=5

# Audio Configuration
AUDIO_SAMPLE_RATE=22050
AUDIO_CHANNELS=1

# Image Processing
IMAGE_MODEL_NAME=openai/clip-vit-base-patch32
MAX_IMAGE_WIDTH=1024
MAX_IMAGE_HEIGHT=1024

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Security (Optional)
# API_KEY=your-secret-api-key
# ENABLE_AUTH=true